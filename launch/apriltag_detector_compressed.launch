<launch>
    
    <arg name="launch_prefix" default="" /> <!-- set to value="gdbserver localhost:10000" for remote debugging -->
    <arg name="node_namespace" default="apriltag_builtin_cam_node" />
    <arg name="camera_name" default="builtin_cam" />
    <arg name="camera_frame" default="/builtin_cam" />
    <arg name="image_topic" default="image_raw" />

    <!-- Set parameters -->
    <rosparam command="load" file="$(find state_estimator)/config/settings.yaml" ns="$(arg node_namespace)" />
    <rosparam command="load" file="$(find state_estimator)/config/tags.yaml" ns="$(arg node_namespace)" />


    <node name="builtin_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
        <param name="video_device" value="/dev/video0" />
        <param name="image_width" value="640" />
        <param name="image_height" value="480" />
        <param name="pixel_format" value="yuyv" />
        <param name="camera_frame_id" value="builtin_cam" />
        <param name="io_method" value="mmap"/>
    </node>



    <node pkg="tf" type="static_transform_publisher" name="apriltag_builtin_cam_tf" args="-0.281, 1.563, 0.921  -0.108, 0.799, -0.581, 0.106 map builtin_cam 1" />
<!--    <node pkg="state_estimator" type="mjpeg_camera_info.py" name="mjpeg_camera_info" />-->

    <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" name="$(arg node_namespace)" clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)" >
        <!-- Remap topics from those used in code to those on the ROS network -->
        <remap from="image_rect" to="$(arg camera_name)/$(arg image_topic)" />
        <remap from="camera_info" to="$(arg camera_name)/camera_info" />
        <param name="camera_frame" type="str" value="$(arg camera_frame)" />
        <param name="publish_tag_detections_image" type="bool" value="true" />      <!-- default: false -->
    </node>

</launch>